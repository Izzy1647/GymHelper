.swiper-tab{

 width: 100%;

 border-bottom: 2rpx solid #777777;

 text-align: center;

 line-height: 80rpx;

}

.swiper-tab-list{

 font-size: 30rpx;

 display: inline-block;

 width: 20%;

 color: #777777;

 margin-right: 4%;

  margin-left: 4%;

}

.on{

 color: #da7c0c;

 border-bottom: 5rpx solid #da7c0c;

}

.swiper-box{

 display: block;

 height: 100%;

 width: 100%;

 overflow: hidden;

}

.swiper-box view{

 text-align: center;

}
.cover{
  height: 100rpx;
}
 
.scroll_box{
width: 84%;
overflow: hidden;
background: #fff;
white-space: nowrap;
margin: 0 auto;
height:1000rpx;
}