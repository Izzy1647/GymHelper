<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/pages/images/loading.gif"></image>
  </view>
  <block wx:else>
    <!-- <image class="title" src="/pages/images/title81.jpg"></image> -->
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="{{userInfo.avatarUrl}}"></image>
        <image class="wave" src="/pages/images/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/pages/images/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <!-- <image class="smalltitle" src="/pages/images/jianshen.jpg"></image> -->
        <view class="confirm-btn" bindtap='goToIndex'>
          <text >开始锻炼</text>
        </view>
      </view>
    </view>
  </block>
</view>